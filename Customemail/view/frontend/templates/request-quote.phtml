                    for (j = 0 ; j < storedArray[i].length ; j++) {
                        contentString[k] = '<td class="item"><input type="text" name="'+storedArray[i][j]['name']+'[]" class="'+storedArray[i][j]['name']+'" value="'+storedArray[i][j]['value']+'"></td>';
