            companyname = {
                'name': 'companyname',
                'value': companynameVal
            };
            name = {
                'name': 'name',
                'value': nameVal
            };
            email = {
                'name': 'email',
                'value': emailVal
            };
            country = {
                'name': 'country',
                'value': countryVal
            };
            message_comment = {
                'name': 'message_comment',
                'value': messageVal
            };
            
